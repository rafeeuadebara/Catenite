// tsconfig.jest.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "jsx": "react-jsx",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,


    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src", "src/tests"]
}
